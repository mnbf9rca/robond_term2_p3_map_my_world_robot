<?xml version='1.0'?>

<robot name="rob_bot" 
    xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find rob_bot)/urdf/rob_bot.gazebo" />

    <link name="robot_footprint"></link>

    <joint name="robot_footprint_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="robot_footprint"/>
        <child link="chassis" />
    </joint>

    <!-- Chassis -->
    <link name='chassis'>
        <pose>0 0 0.1 0 0 0</pose>

        <inertial>
            <mass value="15.0"/>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
        </inertial>

        <collision name='chassis_collision'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size=".4 .2 .1"/>
            </geometry>
        </collision>

        <visual name='chassis_visual'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size=".4 .2 .1"/>
            </geometry>
        </visual>
    </link>
    <!-- end chassis -->
    <!-- front left wheel -->
    <link name="front_left_wheel">

        <visual name='front_left_wheel_visual'>
            <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision name='front_left_wheel_collision'>
            <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="5.0"/>
            <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
        </inertial>
    </link>

    <joint type="continuous" name="front_left_wheel_joint">
        <origin xyz="0.15 0.18 -.05" rpy="0 0 0"/>
        <child link="front_left_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>
    <!-- end front left wheel -->
    <!-- front right wheel -->
    <link name="front_right_wheel">

        <visual name='front_right_wheel_visual'>
            <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision name='front_right_wheel_collision'>
            <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="5.0"/>
            <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
        </inertial>
    </link>

    <joint type="continuous" name="front_right_wheel_joint">
        <origin xyz="-0.15 0.18 -.05" rpy="0 0 0"/>
        <child link="front_right_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>
    <!-- end front right wheel -->

    <!-- rear left wheel -->
    <link name="rear_left_wheel">

        <visual name='rear_left_wheel_visual'>
            <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision name='rear_left_wheel_collision'>
            <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="5.0"/>
            <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
        </inertial>
    </link>

    <joint type="continuous" name="rear_left_wheel_joint">
        <origin xyz="0.15 -0.18 -0.05" rpy="0 0 0"/>
        <child link="rear_left_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>
    <!-- end rear left wheel -->
    <!-- rear right wheel -->
    <link name="rear_right_wheel">

        <visual name='rear_right_wheel_visual'>
            <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision name='rear_right_wheel_collision'>
            <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="5.0"/>
            <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
        </inertial>
    </link>

    <joint type="continuous" name="rear_right_wheel_joint">
        <origin xyz="-0.15 -0.18 -0.05" rpy="0 0 0"/>
        <child link="rear_right_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>
    <!-- end rear right wheel -->

    <!-- kinect camera -->
    <link name='camera'>
        <inertial>
            <mass value="0.1"/>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
        </inertial>

        <collision name='collision'>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size="0.073000 0.276000 0.07200"/>
            </geometry>
        </collision>

        <visual name='camera_visual'>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <mesh filename="package://rob_bot/meshes/kinect.dae"/>
            </geometry>
        </visual>
    </link>
    <joint type="fixed" name="camera_link">
        <origin xyz="0.2 0 0.1" rpy="0 0 0"/>
        <child link="camera"/>
        <parent link="chassis"/>
    </joint>


    <joint name="camera_rgbd_joint" type="fixed">
        <origin xyz="0 0 0" rpy="-${pi/2} 0 -${pi/2}"/>
        <parent link="camera"/>
        <child link="camera_rgbd_frame"/>
    </joint>
    <link name="camera_rgbd_frame"/>
    <!-- end kinect -->

    <!-- begin scanner mount -->
    <!-- raise scanner up 10cm -->
    <link name='scanner_mount'>
        <inertial>
            <mass value="0.1"/>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
        </inertial>

        <collision name='scanner_mount_collision'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size=".1 .1 .1"/>
            </geometry>
        </collision>

        <visual name='scanner_mount_visual'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size=".1 .1 .1"/>
            </geometry>
        </visual>
    </link>
    <joint type='fixed' name='scanner_mount_to_chasis'>
        <origin xyz='0 0 0.1' rpy='0 0 0'/>
        <child link='scanner_mount'/>
        <parent link='chassis'/>
    </joint>
    <!-- end scanner mount -->
    <!-- begin laser scanner -->
    <link name='hokuyo'>
        <visual name='hokuyo_visual'>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rob_bot/meshes/hokuyo.dae"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="0.1"/>
            <origin xyz="0.0 0 0" rpy="0 0 0"/>
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
        </inertial>

        <collision name='collision'>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size='0.1 0.1 0.1'/>
            </geometry>
        </collision>
    </link>

    <joint type="fixed" name="hokuyo_to_scanner_mount">
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
        <child link="hokuyo"/>
        <parent link="scanner_mount"/>
    </joint>
    <!-- end laser scanner -->
</robot>